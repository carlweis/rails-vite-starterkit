#!/usr/bin/env ruby
require "fileutils"

APP_ROOT = File.expand_path("..", __dir__)

def system!(*args)
  system(*args, exception: true)
end

def postgres_running?
  system("pg_isready -q")
end

def start_postgres
  puts "== Checking PostgreSQL =="
  return if postgres_running?

  puts "PostgreSQL not running. Attempting to start..."
  if system("pg_ctlcluster 16 main start")
    puts "✓ PostgreSQL started successfully"
  else
    puts "⚠ Could not start PostgreSQL automatically. Please start it manually:"
    puts "  pg_ctlcluster 16 main start"
    exit 1
  end
end

def redis_running?
  system("redis-cli ping > /dev/null 2>&1")
end

def start_redis
  puts "\n== Checking Redis =="
  return if redis_running?

  puts "Redis not running. Attempting to start..."
  if system("redis-server --daemonize yes")
    sleep 1 # Give Redis a moment to start
    if redis_running?
      puts "✓ Redis started successfully"
    else
      puts "⚠ Redis did not start properly"
      exit 1
    end
  else
    puts "⚠ Could not start Redis automatically. Please start it manually:"
    puts "  redis-server --daemonize yes"
    exit 1
  end
end

FileUtils.chdir APP_ROOT do
  # This script is a way to set up or update your development environment automatically.
  # This script is idempotent, so that you can run it at any time and get an expectable outcome.
  # Add necessary setup steps to this file.

  puts "== Installing Ruby dependencies =="
  system("bundle check") || system!("bundle install")

  puts "\n== Installing JavaScript dependencies =="
  system! "npm install"

  # Start PostgreSQL and Redis if needed
  start_postgres
  start_redis

  puts "\n== Preparing database =="
  system! "bin/rails db:prepare"

  if ARGV.include?("--reset")
    puts "\n== Resetting database =="
    system! "bin/rails db:reset"
  end

  puts "\n== Seeding database =="
  system! "bin/rails db:seed"

  puts "\n== Removing old logs and tempfiles =="
  system! "bin/rails log:clear tmp:clear"

  puts "\n== Setup complete! =="
  puts ""
  puts "To start the development server:"
  puts "  bin/dev"
  puts ""
  puts "Default demo user created:"
  puts "  Email: demo@example.com"
  puts "  Password: demouser1234"
  puts "  Role: Admin"
  puts ""
  puts "Admin-only UIs (login as admin first):"
  puts "  Sidekiq: http://localhost:3000/sidekiq"
  puts "  Flipper: http://localhost:3000/flipper"
  puts ""
  puts "== Generating encryption keys =="
  system "bin/rails db:encryption:init"

  unless ARGV.include?("--skip-server")
    puts "Starting development server..."
    puts ""
    STDOUT.flush # flush the output before exec(2) so that it displays
    exec "bin/dev"
  end
end
